                        %li
                          %a{ href:"{% url 'categories.categoryimage_list' %}"}
                            - trans "Category Images"

              - if request.user.is_superuser or org_perms.dashblocks.dashblock_list
                %li
                  %a(href="#")
                    - trans "Content"
                  .uk-navbar-dropdown
                    %ul.uk-nav.uk-navbar-dropdown-nav
