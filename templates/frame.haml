              %img.logo(src="{{ im.url }}" alt="{{ org.name }}" width="100%")
              {% endthumbnail %}
            .uk-navbar-center-right.uk-margin-xlarge-left
              .uk-navbar-item
                %a.main-link(href="{% url 'public.stories' %}")
