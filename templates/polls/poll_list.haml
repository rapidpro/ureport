-extends "smartmin/list.html"
-load i18n

-block table-buttons
  -if view.add_button
    <a class="btn btn-primary pull-right" href="./create/">{% trans "Add" %}</a>

-block extra-style
  :css
      td.field_created_on, td.field_poll_date {
        white-space: nowrap;
      }

      td.field_sync_status {
        width: 150px;
      }

      td.field_category {
        max-width: 150px;
      }

      td.field_questions {
        text-align: center;
      }

      td.field_featured_responses {
        text-align: center;
      }

      td.field_images {
        text-align: center;
      }
