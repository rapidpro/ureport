-extends "smartmin/update.html"
-load smartmin

-block fields
  <fieldset>
    -for field in fields
      -if 'include' in field
        <div class="question">

      {% render_field field %}

      -if 'title' in field
        </div>
  </fieldset>

- block post-form
  -if request.user.is_superuser or perms.polls.poll_pull_refresh
    %form.smartmin-form.form-horizontal{action:"{% url 'polls.poll_pull_refresh' object.id %}", method:"post",  enctype:"multipart/form-data"}
      - csrf_token
      .control-group
        %label.control-label
          Poll Results Data
        .controls
          .row
            .col-md-3
              %button.btn.btn-primary.btn-block{type:"submit", name:"poll", value:"{{object.id}}"}
                Refresh Results


-block extra-style
  :css
    .question {
      border: 1px solid #ccc;
      margin-bottom: 10px;
      padding: 10px;
    }


