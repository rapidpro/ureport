- extends "public_base.html"

- load thumbnail compress i18n ureport

- block content
  .bg-grid
    .max-w-page.mx-auto.p-home(class="md:flex")
      .flex-1.flex-center-y.hover-parent
        .text-5xl.font-bold
          -trans "Bots"
  
    -for bot in bots

      .max-w-page.mx-auto.my-8.py-2.px-4
        .border.p-home.bg-white
          .block.border-b
            .mb-4.text-3xl
              {{bot.title}}
          .block.flex.mt-4
            .block(class="w-1/2")
              -if bot.deeplink
                .block.mb-1
                  -blocktrans with deeplink=bot.deeplink
                    %a.btn.bg-light1.hover-dark.text-black(href="{{deeplink}}")
                      Click to start
                .mt-8.block
                  -trans "Or"

              .mb-4.mt-4
                -trans "Send"
                .text-2xl.inline.text-bold
                  "{{bot.keyword}}"
                .inline
                  keyword to
                .text-2xl.inline-block
                  {{bot.channel}}
              
              
            .flex-1
              {{bot.description|safe}}