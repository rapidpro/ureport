- extends "public_base.html"

- load thumbnail ureport i18n compress

-block subtitle
  &nbsp;-
  -trans "Jobs"

- block hero
  #fb-root
  - for main_entry in rss_sources.0.get_entries|slice:"1"
    .hero-container
      .hero-dark-container
        .container
          .row
            .col-md-6
              .story-hero
                .hero-title.primary-bg-color
                  - trans "FEATURED JOBS"
                .story-hero-title
                  {{ main_entry.title|upper }}

                .hero-info
                  {{ main_entry.summary|safe|truncatewords:20 }}
                .hero-title.hero-link.primary-bg-color
                  %a{href:"{{ main_entry.link }}"}
                    - trans "SEE JOB DETAILS"
                    &#8594;

  - block banner
    {{ block.super }}

- block content
  .section
    %h1.level-1-title
      - trans "LATEST U-REPORT JOBS"
  .row
    .jobs-filtered
      - for twit in twitter_sources
        .col-md-4{style:"height:400px"}
          %a.twitter-timeline{href:"{{ twit.source }}", data-widget-id:"{{ twit.widget_id }}" }
            Tweets by @{{ twit.get_username }}
      - for fb in facebook_sources
        .col-md-4{style:"height:400px"}
          .white-card-container
            .fb-like-box{data-href:"{{ fb.source }}", data-height:"400px", data-colorscheme:"light", data-show-faces:"false", data-header:"false", data-stream:"true", data-show-border:"false"}
      - for source in rss_sources
        .col-md-4{style:"height:400px"}
          .white-card-container
            .white-card-inner{style:"height:400px; overflow:auto"}
              %h2.level-1-title
                %a{href:"{{ source.get_return_page }}"}
                  {{ source.title|upper }}

              - for entry in source.get_entries|slice:"6"
                .white-card-content.white-card-padding
                  .featured-story-title
                    {{ entry.title }}
                  .half-border.none-color
                  .featured-story-teaser
                    {{ entry.summary|safe|truncatewords:20 }}
                  %a{href:"{{ entry.link }}"}
                    - trans "SEE JOB DETAILS"
                    &#8594;

  -#%hr.aaa
  -#- include "public/archived_stories.html"


