- extends "base_admin_dashboard.html"

- load smartmin i18n ureport

- block login
- block welcome-text

- block content-section
  .content-section
    - block content
      .columns.login-form.is-centered.is-desktop
        .column.is-half
          %form#login-form(method="post")
            - for field, errors in form.errors.items
              - if field == '__all__'
                .alert.alert-danger.form-errors
                  %h3
                    - trans "Error"
                  {{ errors }}

            %fieldset
              .field.login-input
                %input(type="text" name="username" autofocus="" placeholder="Username" class="input" required="" id="id_username")

              .field.login-input
                %input(type="password" name="password" placeholder="Password" class="input" required="" id="id_password" autocomplete="off")

              - csrf_token

              %button.button.is-info.login-button(type="submit")
                - trans "Enter Dashboard"
          
              - if allow_email_recovery
              .forgot-password-link
                %a.has-text-info.is-large(href="{% url 'users.user_forget' %}")
                  - trans "Forgot Password?"